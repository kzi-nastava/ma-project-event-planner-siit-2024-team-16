<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Category Spinner -->
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/suggestion_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:text="@string/can_t_find_the_category_you_want_you_can_suggest_a_new_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_suggest_category"
                android:text="@string/suggest_new_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GreenRoundedButton"/>
        </LinearLayout>

        <!-- New Category Fields -->
        <LinearLayout
            android:id="@+id/layout_new_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">
        <EditText
            android:inputType="text"
            android:id="@+id/edit_new_category_name"
            android:hint="@string/new_category_name"
            android:autofillHints="@string/new_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_new_category_description"
            android:hint="@string/new_category_description"
            android:autofillHints="@string/new_category_description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_cancel_suggestion"
            android:text="@string/cancel_suggestion"
            android:layout_width="wrap_content"
            style="@style/GreenRoundedButton"
            android:layout_gravity="end"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <!-- Product Name -->
        <EditText
            android:inputType="text"
            android:id="@+id/edit_name"
            android:hint="@string/name"
            android:autofillHints="@string/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Description -->
        <EditText
            android:id="@+id/edit_description"
            android:hint="@string/description"
            android:autofillHints="@string/description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Pricing -->
        <TextView
            android:text="@string/pricing"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_price"
                android:hint="@string/price"
                android:autofillHints="@string/price"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edit_discount"
                android:hint="@string/discount"
                android:autofillHints="@string/discount"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Add Images -->
        <LinearLayout
            android:id="@+id/imagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/txt_upload_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="17dp"
                android:text="@string/upload_images"/>
            <ImageView
                android:id="@+id/icon_upload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:contentDescription="@string/images"
                android:focusable="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_upload_image"/>
        </LinearLayout>

        <!-- Preview container -->
        <LinearLayout
            android:id="@+id/images_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Toggles -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_visible"
            android:text="@string/product_is_visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_available"
            android:text="@string/product_is_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save"
            android:text="@string/save"
            style="@style/PurpleFilledButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
