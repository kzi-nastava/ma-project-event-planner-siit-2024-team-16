<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_margin="2dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Day Number -->
    <TextView
        android:id="@+id/day_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="15"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:minWidth="32dp"
        android:minHeight="32dp" />

    <!-- Regular Event Indicator -->
    <View
        android:id="@+id/event_indicator"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_below="@id/day_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/event_indicator_regular"
        android:visibility="gone" />

    <!-- Special Event Indicator -->
    <View
        android:id="@+id/special_event_indicator"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_below="@id/event_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/event_indicator_special"
        android:visibility="gone" />

</RelativeLayout>