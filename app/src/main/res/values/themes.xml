<resources>

    <style name="Base.Theme.Evenmate" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@color/beige</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryContainer">@color/light_purple</item>
        <item name="colorOnPrimary">@color/beige</item>
        <item name="colorOnPrimaryContainer">@color/grey</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryContainer">@color/light_green</item>
        <item name="colorOnSecondary">@color/beige</item>
        <item name="colorOnSecondaryContainer">@color/grey</item>
        <item name="colorTertiaryContainer">@color/light_grey</item>
        <item name="colorOnTertiaryContainer">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="PurpleFilledButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/beige</item>
        <item name="strokeColor">@color/purple</item>
    </style>
    <style name="GreenFilledButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/beige</item>
        <item name="strokeColor">@color/green</item>
    </style>
    <style name="GreenRoundedButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/green</item>
    </style>
    <style name="PurpleRoundedButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/purple</item>
    </style>
    <style name="GreenOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/green</item>
        <item name="strokeColor">@color/green</item>
    </style>
    <style name="RedOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/red</item>
        <item name="strokeColor">@color/red</item>
    </style>
</resources>