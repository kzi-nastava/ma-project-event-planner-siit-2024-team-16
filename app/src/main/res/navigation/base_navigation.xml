<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_navigation"
    app:startDestination="@+id/HomepageFragment">
    <fragment
        android:id="@+id/nav_auth"
        android:name="com.example.evenmate.fragments.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_nav_login_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.evenmate.fragments.auth.RegisterFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/providerServicesProductsFragment"
        android:name="com.example.evenmate.fragments.ProviderServicesProductsFragment"
        android:label="Your Products and Services"
        app:popUpTo="@+id/nav_products"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_provider_services_products" />
    <fragment
        android:id="@+id/eventTypesFragment"
        android:name="com.example.evenmate.fragments.event_type.EventTypesFragment"
        android:label="Event types"
        tools:layout="@layout/fragment_event_types" >
        <action
            android:id="@+id/action_eventTypesFragment_to_createEventTypeFragment"
            app:destination="@id/createEventTypeFragment" />
    </fragment>
    <fragment
        android:id="@+id/createEventTypeFragment"
        android:name="com.example.evenmate.fragments.event_type.EventTypeFormFragment"
        android:label="CreateEventTypeFragment" />
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.example.evenmate.fragments.event.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_events" />
    <fragment
        android:id="@+id/HomepageFragment"
        android:name="com.example.evenmate.fragments.homepage.HomepageFragment"
        android:label="Home"
        app:popUpTo="@+id/home"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_homepage" />
    <fragment
        android:id="@+id/profileEO"
        android:name="com.example.evenmate.fragments.profile.ProfileEOFragment"
        android:label="fragment_profile_e_o"
        tools:layout="@layout/fragment_profile_e_o" />
    <fragment
        android:id="@+id/profilePSP"
        android:name="com.example.evenmate.fragments.profile.ProfilePSPFragment"
        android:label="fragment_profile_p_s_p"
        tools:layout="@layout/fragment_profile_p_s_p" >
        <action
            android:id="@+id/action_profilePSP_to_editPSPFragment"
            app:destination="@id/editPSPFragment" />
    </fragment>
    <fragment
        android:id="@+id/editPSPFragment"
        android:name="com.example.evenmate.fragments.profile.EditPSPFragment"
        android:label="EditPSPFragment" />

</navigation>
